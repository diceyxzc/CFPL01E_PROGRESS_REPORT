// No.1
#include <stdio.h>
void main() {
    float kilometers;
    printf("Enter distance in kilometers(km): ");
    scanf("%f", &kilometers);
    
    float meters = kilometers * 1000.0; 
    
    printf("Distance in meters: %.2f m\n", meters);
}

// No.2
#include <stdio.h>
void main() {
    float radius;
    printf("Enter the radius of the circle(cm): ");
    scanf("%f", &radius);
    
    float area = radius * radius * 3.14; 
    
    printf("Area of the circle: %.2f cm^2\n", area);
}

// No.3
#include <stdio.h>
void main() {
    float Fahrenheit;
    printf("Enter Fahrenheit(F): ");
    scanf("%f", &Fahrenheit);
    
    float celsius1 = Fahrenheit - 32;
    float celsius2 = celsius1 * 5/9;
    
    printf("Celsius: %.2f C\n", celsius2);
}

// No.4
#include <stdio.h>
void main() {
    char name[30];
    float grade1, grade2;
    
    printf("Enter name of the student: ");
    scanf("%s", name);
    
    printf("Enter Minor A exam score: ");
    scanf("%f", &grade1);
    
    printf("Enter Midterm exam score: ");
    scanf("%f", &grade2);
    
    float grade = grade1 * 1/3 + grade2 * 2/3;
    
    printf("\n--- Student Midterm Grade ---\n");
    printf("Name: %s\n", name);
    printf("Midterm Grade: %.2f\n", grade);
}

// No.5
#include <stdio.h>
void main() {
    float kilowatt;
    printf("Enter kilowatt(kW): ");
    scanf("%f", &kilowatt);
    
    float watts = kilowatt * 1000.0; 
    
    printf("Watts conversion: %.2f W\n", watts);
}


// No.6
#include <stdio.h>
void main() {
    int side;
    printf("Enter the side of the square(m): ");
    scanf("%d", &side);
    
    float area = side * side; 
    
    printf("Area of the square: %.2f m^2\n", area);
}

// No.7
#include <stdio.h>
void main() {
    float inches;
    printf("Enter inches(in.): ");
    scanf("%f", &inches);
    
    float feet = inches * 0.0833333; 
    
    printf("Feet conversion: %.2f ft.\n", feet);
}
